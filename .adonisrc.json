{
  "typescript": true,
  "commands": [
    "@adonisjs/core/commands",
    "@adonisjs/lucid/commands"
  ],
  "exceptionHandlerNamespace": "App/Exceptions/Handler",
  "aliases": {
    "App": "app",
    "Config": "config",
    "Database": "database",
    "Contracts": "contracts"
  },
  "preloads": [
    "./start/routes",
    "./start/kernel",
    "./start/redis",
    "./start/validator"
  ],
  "providers": [
    "./providers/AppProvider",
    "@adonisjs/core/providers/app_provider",
    "@adonisjs/core/providers/hash_provider",
    {
      "file": "@adonisjs/core/providers/repl_provider",
      "environment": [
        "repl",
        "test"
      ]
    },
    "@adonisjs/lucid/database_provider",
    "@adonisjs/auth/auth_provider",
    "@adonisjs/redis/redis_provider"
  ],
  "aceProviders": [
    "@adonisjs/repl"
  ],
  "tests": {
    "suites": [
      {
        "name": "functional",
        "files": [
          "tests/functional/**/*.spec(.ts|.js)"
        ],
        "timeout": 60000
      }
    ]
  },
  "testProviders": [
    "@japa/preset-adonis/TestsProvider"
  ]
}